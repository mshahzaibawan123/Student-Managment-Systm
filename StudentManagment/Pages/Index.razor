@page "/mainpage"

<!-- final look -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Website</title>

    <style>
        /* CSS styles */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        header {
            /* Add styles for header */
        }

        nav ul {
            /* Add styles for navigation menu */
        }

        .background-video {
            position: relative;
            width: 100%;
            height: 100vh; /* Cover the entire viewport height */
            overflow: hidden;
        }

            .background-video video {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover; /* Cover the entire container */
            }

        .content-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            z-index: 1;
            color: #fff;
        }

        /* Button container styles */
        .button-container {
            position: absolute;
            top: calc(50% + 50px); /* Adjust this value to position the buttons below the text */
            right: 15px;
            text-align: right; /* Align the buttons to the right */
        }

        /* Button styles */
        .button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #6ab04c;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            margin-left: 10px;
        }

            .button:hover {
                background-color: #4e8b36;
            }
    </style>

    <script>
        function openPopup(url) {
            window.open(url, '_blank', 'width=600,height=400');
        }
    </script>
</head>
<body>

    <!-- Video section -->
    <section class="background-video">
        <!-- Background video -->
        <video controls="controls" autoplay loop width="100%">
            <source src="/video/magic-tree-in-darkness.3840x2160.mp4" type="video/mp4" />
            <!-- Placeholder image -->
            <img src="placeholder-image.jpg" alt="Video placeholder" width="100%" />
        </video>

        <!-- Content overlay -->
        <div class="content-overlay">
            <!-- Your content here -->
            <h1>Welcome to our Website</h1>
            <p>Every student's journey is valued and every potential is nurtured to thrive in the pursuit of knowledge and success.</p>
            <!-- Button container -->
            <div class="button-container">
                <a href="javascript:void(0);" onclick="openPopup('https://au.edu.pk/Pages/Examination/exam_datesheet.aspx');" class="button">View Datesheet</a>
            </div>
        </div>
    </section>

    <!-- Footer section -->
    <footer>
        <!-- Footer content -->
        <p>&copy; 2024 Your Website. All rights reserved.</p>
    </footer>

    <!-- JavaScript scripts -->
    <script src="scripts.js"></script>
</body>
</html>