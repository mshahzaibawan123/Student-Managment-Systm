@page "/contect"
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - School Management System</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            position: relative; /* Set container position to relative */
            z-index: 1; /* Ensure container is above the video */
        }

        .background-video {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1; /* Set video below other content */
            overflow: hidden;
        }

            .background-video video {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        .contact-info {
            margin-bottom: 20px;
        }

            .contact-info p {
                margin-bottom: 10px;
            }

            .contact-info h3 {
                margin-bottom: 5px;
            }

            .contact-info a {
                color: #007bff;
                text-decoration: none;
            }

                .contact-info a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <!-- Background video -->
    <div class="background-video">
        <video controls="controls" autoplay loop width="100%">
            <source src="/video/japanese-spring.3840x2160.mp4" type="video/mp4" />
            <!-- Placeholder image -->
            <img src="placeholder-image.jpg" alt="Video placeholder" width="100%" />
        </video>


    </div>

    <div class="container">
        <h1>Contact Us</h1>
        <div class="contact-info">
            <h3>Phone Number:</h3>
            <p>Call us at: <a href="tel:+1234567890">1234567890</a></p>
        </div>
        <div class="contact-info">
            <h3>Email:</h3>
            <p>Email us at: <a href="mailto:info@example.com">info@example.com</a></p>
        </div>
        <div class="contact-info">
            <h3>Instagram:</h3>
            <p>Follow us on Instagram: <a href="https://www.instagram.com/NO_PAPER_SCHOOL" target="_blank">No paper scchool </a></p>
        </div>
        <div class="contact-info">
            <h3>AIR Home Page:</h3>
            <p>Visit our AIR Home Page: <a href="https://www.au.edu.pk/">AIR Home Page</a></p>
        </div>
        <div class="contact-info">
            <h3>Facebook:</h3>
            <p>Connect with us on Facebook: <a href="https://www.facebook.com/TheAirUniversity/" target="_blank">Facebook</a></p>
        </div>
    </div>
</body>
</html>
